<h1>Ask a question</h1>


<%= form_with scope: :question, url: questions_path, local: true do |form| %>

<% if @errors %>
<ul>
  <% @errors.each do |error| %>
  <li><%= error %></li>
  <% end %>
  </ul>
<% end %>


 <p>
   <%=form.label :headline %><br>
   <%=form.text_field :headline %>
 </p>
 <p>
   <%=form.label :body %><br>
   <%=form.text_area :body %>
 </p>
 <p>
   <%=form.hidden_field :user_id, value: current_user.id, class:'d-none' %>
 </p>
 <p>
   <%= form.submit 'Post Your Question', class: 'btn-primary' %>
 </p>
 <% end %>

<% link_to 'Back', questions_path %>
